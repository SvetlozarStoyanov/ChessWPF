<UserControl x:Class="ChessWPF.Views.Cells.ChessCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessWPF.Views.Cells"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="100">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1"/>

        <Button Command="{Binding SelectCommand}" x:Name="cellBtnSelect" IsEnabledChanged="cellBtnSelect_IsEnabledChanged">
        </Button>
        <Button Command="{Binding MoveCommand}" x:Name="cellBtnMove" IsEnabledChanged="cellBtnMove_IsEnabledChanged">
        </Button>
        <Image x:Name="img" Source="{Binding CellImage}" Opacity="1" />

        <!--<TextBlock Text="{Binding Position}"/>-->
    </Grid>
</UserControl>
