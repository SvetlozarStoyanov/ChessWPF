<UserControl x:Class="ChessWPF.Views.Moves.MoveBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessWPF.Views.Moves"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" Background="{Binding Background, UpdateSourceTrigger=PropertyChanged}">
        <Button Content="{Binding Annotation, UpdateSourceTrigger=PropertyChanged}"></Button>
    </StackPanel>
</UserControl>


