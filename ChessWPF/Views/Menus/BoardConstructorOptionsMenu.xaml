<UserControl x:Class="ChessWPF.Views.Menus.BoardConstructorOptionsMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessWPF.Views.Menus"
             mc:Ignorable="d" 
             >
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label
               Grid.Row="0" FontSize="40"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               FontWeight="Bold">
            Additional
        </Label>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label FontSize="25" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center">TurnColor</Label>
            <ComboBox x:Name="turnColorsComboBox" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100"
                      Loaded="turnColorsComboBox_Loaded"
                      SelectedItem="{Binding SelectedTurnColor,UpdateSourceTrigger=PropertyChanged}">
                <ComboBoxItem>
                    <DataTemplate>
                        <TextBlock Text="{Binding item}"></TextBlock>
                    </DataTemplate>
                </ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <Label Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"
               FontSize="20px" FontWeight="DemiBold">
            Castling Rights
        </Label>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.ColumnSpan="3">
                <Label FontSize="25">White</Label>
                <CheckBox Command="{Binding SetCastlingRightsCommand}"
                          IsChecked="{Binding CastlingRights[0], UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                          IsEnabled="{Binding CastlingPossibilities[0],UpdateSourceTrigger=PropertyChanged}"
                          IsEnabledChanged="CheckBox_IsEnabledChanged"
                          VerticalAlignment="Center" HorizontalAlignment="Center">
                    0-0</CheckBox>
                <CheckBox Command="{Binding SetCastlingRightsCommand}" 
                          IsChecked="{Binding CastlingRights[1], UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                          IsEnabled="{Binding CastlingPossibilities[1],UpdateSourceTrigger=PropertyChanged}"
                          IsEnabledChanged="CheckBox_IsEnabledChanged"
                          VerticalAlignment="Center" HorizontalAlignment="Center">
                    0-0-0</CheckBox>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.ColumnSpan="3">
                <Label  FontSize="25">Black</Label>
                <CheckBox Command="{Binding SetCastlingRightsCommand}" 
                          IsChecked="{Binding CastlingRights[2], UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                          IsEnabled="{Binding CastlingPossibilities[2],UpdateSourceTrigger=PropertyChanged}"
                          IsEnabledChanged="CheckBox_IsEnabledChanged"
                          VerticalAlignment="Center" HorizontalAlignment="Center">
                    0-0</CheckBox>
                <CheckBox Command="{Binding SetCastlingRightsCommand}" 
                          IsChecked="{Binding CastlingRights[3], UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                          IsEnabled="{Binding CastlingPossibilities[3],UpdateSourceTrigger=PropertyChanged}"
                          IsEnabledChanged="CheckBox_IsEnabledChanged"
                          VerticalAlignment="Center" HorizontalAlignment="Center">
                    0-0-0</CheckBox>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="5" Orientation="Horizontal">

            <Label HorizontalAlignment="Left" VerticalAlignment="Center"  FontSize="25px" FontWeight="DemiBold" >En Passant</Label>
            <ComboBox x:Name="enPassantComboBox" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100"
                      Loaded="enPassantComboBox_Loaded" SelectedItem="{Binding SelectedEnPassantCoordinates}"
                      >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding AsText}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <Grid Grid.Row="6" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="0" Command="{Binding ResetBoardToDefaultCommand}">Reset Board</Button>
            <Button Grid.Row="1" Grid.Column="0">Save Position</Button>
            <Button Grid.Row="0" Grid.Column="1">Clear Board</Button>
            <Button Grid.Row="1" Grid.Column="1">Load Saved Position</Button>
        </Grid>
    </Grid>
</UserControl>
